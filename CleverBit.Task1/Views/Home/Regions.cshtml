@using CleverBit.Task1.Common.Models.Dto.Region

@model List<RegionInputDto>

@{
    ViewData["Title"] = "Regions";
}
<h1>@ViewData["Title"]</h1>

<table id="regions" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Parent Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Name</th>
                <th>@item.ParentId</th>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#regions').DataTable();
    });
</script>